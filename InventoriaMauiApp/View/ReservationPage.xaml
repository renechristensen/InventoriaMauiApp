<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:InventoriaMauiApp.ViewModels"
             x:Class="InventoriaMauiApp.View.ReservationPage"
             x:DataType="viewmodel:ReservationPageViewModel"
             Title="Opret Reservation">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <DatePicker x:Name="startDatePicker" Date="{Binding StartDate}"
                        Format="D" MinimumDate="{Binding MinimumDate}"
                        MaximumDate="{Binding MaximumDate}"
                        TextColor="#333333" FontAttributes="Bold" />

            <DatePicker x:Name="endDatePicker" Date="{Binding EndDate}"
                        Format="D" MinimumDate="{Binding MinimumTomorrowDate}"
                        MaximumDate="{Binding MaximumDate}"
                        TextColor="#333333" FontAttributes="Bold" />

            <Entry Text="{Binding Background}"
                   Placeholder="Baggrunds information (obligatorisk)"
                   BackgroundColor="#ffffff" TextColor="#333333" />

            <Grid ColumnDefinitions="*, 30, *" HorizontalOptions="FillAndExpand">
                <Button Margin="5,5" 
                    Text="Tilbage"
                    Command="{Binding NavigateBackCommand}"
                    Grid.Column="0"
                    HorizontalOptions="FillAndExpand"/>
                <Button Margin="5,5"  
                    Text="Opret Reservation"
                    Command="{Binding CreateReservationCommand}"
                    Grid.Column="2"
                    HorizontalOptions="FillAndExpand"/>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
