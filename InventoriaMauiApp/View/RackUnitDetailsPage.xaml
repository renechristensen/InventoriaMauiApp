<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:InventoriaMauiApp.ViewModels"
             xmlns:converters="clr-namespace:InventoriaMauiApp.Converters"
             x:Class="InventoriaMauiApp.View.RackUnitDetailsPage"
             x:DataType="viewmodel:RackUnitDetailsPageViewModel"
             Title="Rack Unit Detaljer"
             BackgroundColor="#f0f0f0">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:ListToStringConverter x:Key="ListToStringConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <Frame Padding="20" Margin="20" CornerRadius="0" BorderColor="#cccccc" BackgroundColor="#ffffff"
               HorizontalOptions="FillAndExpand" VerticalOptions="Center">
            <Grid RowSpacing="15" ColumnSpacing="10" ColumnDefinitions="Auto, *">
                <!-- Define the rows for the grid -->
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Text="Unit Nummer:" FontSize="16" FontAttributes="Bold" VerticalOptions="Center"/>
                <Label Grid.Row="0" Grid.Column="1" Text="{Binding RackUnit.UnitNumber}" FontSize="16" VerticalOptions="Center"/>

                <Label Grid.Row="1" Grid.Column="0" Text="Udstyr Titel:" FontSize="16" FontAttributes="Bold" VerticalOptions="Center"/>
                <Label Grid.Row="1" Grid.Column="1" Text="{Binding RackUnit.EquipmentName}" FontSize="16" VerticalOptions="Center"/>

                <Label Grid.Row="2" Grid.Column="0" Text="Model:" FontSize="16" FontAttributes="Bold" VerticalOptions="Center"/>
                <Label Grid.Row="2" Grid.Column="1" Text="{Binding RackUnit.EquipmentModel}" FontSize="16" VerticalOptions="Center"/>

                <Label Grid.Row="3" Grid.Column="0" Text="Type:" FontSize="16" FontAttributes="Bold" VerticalOptions="Center"/>
                <Label Grid.Row="3" Grid.Column="1" Text="{Binding RackUnit.EquipmentType}" FontSize="16" VerticalOptions="Center"/>

                <Label Grid.Row="4" Grid.Column="0" Text="Reservations Status:" FontSize="16" FontAttributes="Bold" VerticalOptions="Center"/>
                <Label Grid.Row="4" Grid.Column="1" Text="{Binding RackUnit.ReservationBackground}" FontSize="16" VerticalOptions="Center"/>

                <Label Grid.Row="5" Grid.Column="0" Text="Reserveret Af:" FontSize="16" FontAttributes="Bold" VerticalOptions="Center"/>
                <Label Grid.Row="5" Grid.Column="1" Text="{Binding RackUnit.DisplayName}" FontSize="16" VerticalOptions="Center"/>

                <!-- Button positioned below the grid in the frame -->
                <StackLayout Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalOptions="Start">
                    <Button Text="Tilbage" Command="{Binding NavigateBackCommand}" Margin="0, 8, 0, 6"/>
                </StackLayout>
            </Grid>
        </Frame>
    </ScrollView>
</ContentPage>
