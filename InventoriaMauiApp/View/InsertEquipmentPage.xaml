<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:InventoriaMauiApp.ViewModels"
             x:Class="InventoriaMauiApp.View.InsertEquipmentPage"
             x:DataType="viewmodel:InsertEquipmentPageViewModel"
             Title="Insert Equipment">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <Entry Text="{Binding Name}"
                   Placeholder="Equipment name"
                   BackgroundColor="#ffffff" TextColor="#333333" />

            <Entry Text="{Binding Model}"
                   Placeholder="Model"
                   BackgroundColor="#ffffff" TextColor="#333333" />

            <Entry Text="{Binding Type}"
                   Placeholder="Type"
                   BackgroundColor="#ffffff" TextColor="#333333" />

            <Button Text="Create Equipment"
                    Command="{Binding CreateEquipmentCommand}"
                    BackgroundColor="#4CAF50" TextColor="White" />

            <Button Text="Back"
                    Command="{Binding NavigateBackCommand}"
                    BackgroundColor="#F44336" TextColor="White" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
